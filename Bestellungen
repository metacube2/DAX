BestellungenC = 
VAR Bestellkopfdaten =
    SELECTCOLUMNS(
        EKKOSet,
        "EBELN", EKKOSet[EBELN],
        "LIFNR", EKKOSet[LIFNR]
    )
RETURN 
ADDCOLUMNS(
    Bestellkopfdaten,
    "BELEGPOS", CALCULATE(MAX(EKBESet[EBELP]), FILTER(ALL(EKBESet), EKBESet[EBELN] = [EBELN])),
    "Einteilung", CALCULATE(MAX(EKETSet[ETENR]), FILTER(ALL(EKETSet), EKETSet[EBELN] = [EBELN])),
    "Einteilung2", CALCULATE(MAX(EKETSet[EINDT]), FILTER(ALL(EKETSet), EKETSet[EBELN] = [EBELN])),
    "Baugruppe", CALCULATE(MIN(EKPOSet[Matnr]), FILTER(ALL(EKPOSet), EKPOSet[EBELN] = [EBELN])),
    "NAME1", LOOKUPVALUE(LFA1Set[NAME1], LFA1Set[LIFNR], [LIFNR]),
 
    "Lieferdatum", CALCULATE(MAX(EKETSet[EINDT]), FILTER((EKETSet), EKETSet[EBELN] = [EBELN])),
    "Menge", CALCULATE(SUM(EKBESet[MENGE]), FILTER(ALL(EKBESet), EKBESet[EBELN] = [EBELN])),
    "Buchungsdatum", CALCULATE(MAX(EKBESet[BUDAT]), FILTER(ALL(EKBESet), EKBESet[EBELN] = [EBELN]))
)
